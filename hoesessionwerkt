<?php
session_start();

function keuzevakje($vakje, $keuze){
      if($_SESSION['keuze'][$vakje] == 1){
      if($vakje==$keuze){
	       $out="X";
	     }else{
      $out="<form method='post'>
	  <input type='hidden' name='vakje' value='$vakje' />
	  <input type='submit' value='kies' />
	  </form>
	  ";
	  }
	  return $out;
	  }

if(!isset($_POST['vakje'])){
     $_POST['vakje']=10;
}else{
     $_SESSION['keuze'] [ ($_POST['vakje']) ] = 1;
}

?>




<table border="1">
<tr>
    <td><?php echo keuzevakje(0,$_POST['vakje']); ?></td>
	<td><?php echo keuzevakje(1,$_POST['vakje']); ?></td>
	<td><?php echo keuzevakje(2,$_POST['vakje']); ?></td>
</tr>
<tr>
    <td><?php echo keuzevakje(3,$_POST['vakje']); ?></td>
	<td><?php echo keuzevakje(4,$_POST['vakje']); ?></td>
	<td><?php echo keuzevakje(5,$_POST['vakje']); ?></td>
</tr>
<tr>
    <td><?php echo keuzevakje(6,$_POST['vakje']); ?></td>
	<td><?php echo keuzevakje(7,$_POST['vakje']); ?></td>
	<td><?php echo keuzevakje(8,$_POST['vakje']); ?></td>
</tr>
</table>
